rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow only authenticated users with verified email to read all collections
    match /students/{document} {
      allow read: if request.auth != null && request.auth.token.email_verified;
    }
    
    match /parents/{document} {
      allow read: if request.auth != null && request.auth.token.email_verified;
    }
    
    match /staff/{document} {
      allow read: if request.auth != null && request.auth.token.email_verified;
    }
    
    match /classes/{document} {
      allow read: if request.auth != null && request.auth.token.email_verified;
    }
    
    match /committees/{document} {
      allow read: if request.auth != null && request.auth.token.email_verified;
    }

    match /workflows/{document} {
      allow read, write: if request.auth != null && request.auth.token.email_verified && request.auth.token.admin == true;
      
      match /participants/{participantId} {
        allow read, write: if request.auth != null && request.auth.token.email_verified && request.auth.token.admin == true;
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}